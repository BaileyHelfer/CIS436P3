<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgViewCatPics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_tvName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvTemperament"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_tvTemperament"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_tvOrigin"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvRare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rare"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvLifespan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lifespan"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>